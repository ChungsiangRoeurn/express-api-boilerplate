
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
    ADMIN
    USER
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}
